

<%
@days = {}
@total = 0
@votes.each do |vote|
  logger.info "#{vote.created_at.strftime('%Y-%m-%d')} #{vote.vote}"
  @days[vote.created_at.strftime('%Y-%m-%d')] = @total
  if vote.vote
    @days[vote.created_at.strftime('%Y-%m-%d')] += 1
  else
    @days[vote.created_at.strftime('%Y-%m-%d')] -= 1
  end
  @total = @days[vote.created_at.strftime('%Y-%m-%d')]
end

%>

<%= @days %>