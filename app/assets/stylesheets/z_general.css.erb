a:hover { background: none; }
input.ui-input-text { color: #000; }
.ui-body-c textarea { color: #000; }

.ui-listview.comment_list { margin: 0 auto; }
.ui-listview.comment_list li p { color: #000; }
.ui-listview .ui-li-desc { white-space: normal; width: 75%; }
.ui-listview .ui-li-aside { width: 25%; }
.ui-dialog p { color: #000; }
.comment_list .ui-li-desc { margin: 0 0 .6em 0; }

a.ui-btn:hover {
  background: #dadada;
  color: #101010;
}

.ui-body-c a.heart {
  display: block;
  width: 22px;
  height: 22px;
  background: transparent url('<%= image_path('heart.png') %>') bottom left no-repeat;
  text-indent: -9000px;
}

.ui-body-c a.heart:hover, .ui-body-c a.heart.active {
  background-position: top left;
}

.ui-body-c a.facebook_share, .ui-body-c a.twitter_share {
  display: block;
  width: 64px;
  height: 45px;
  text-indent: -9000px;
}

span.share { float: left; margin: 10px 8px 0 0; }
.ui-body-c a.facebook_share { float: left; background: transparent url('<%= image_path('facebook_share.png') %>') top left no-repeat; }
.ui-body-c a.twitter_share { float: left; background: transparent url('<%= image_path('twitter_share.png') %>') top left no-repeat; }

.ui-body-c a.facebook_share.active, .ui-body-c a.twitter_share.active {
  background-position: bottom left;
}

#footer a {
  display: block;
  height: 47px;
  text-indent: -9000px;
  width: 80px;
  background-position: center top;
  background-repeat: no-repeat;
}

#footer a.find_classes {
  background-image: url('<%= image_path('find_classes.png') %>');
}

#footer a.my_classes {
  background-image: url('<%= image_path('my_classes.png') %>');
}

#footer a.my_info {
  background-image: url('<%= image_path('my_info.png') %>');
}

#footer a.rate_it {
  background-image: url('<%= image_path('rate_it.png') %>');
}

#footer a.active { background-position: center -50px;}
#footer a.find_classes.active { background-position: center -51px;}
 
#theCounter {
  display: block;
  width: 98%;
  text-align: right;
}
.tcAlert { color: orange; }
.tcWarn { color: red; }